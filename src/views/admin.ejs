            <input type="text" id="inputPrrecio" class="form-control" placeholder="Ej.: $100">
          </div>
          <div class="form-group col-12">
            <label for="inputSku">SKU</label>
            <input type="text" id="inputSku" class="form-control" placeholder="Ej.:SP1">
          </div>
          <div class="form-group col-12">
            <label class="text-secondary" for="exampleFormControlFile1">Archivos en PNG o JPEG</label>
            <input type="file" class="form-control-file" id="exampleFormControlFile1">
          </div>
        </div>
        <button type="submit" class="btn btn-success btn-sm">Confirmar carga</button>
      </form>
    </div>
  </div>

  <%- include('./partials/_bootstrapscripts.ejs') %>
